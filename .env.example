# Database Configuration
POSTGRES_SERVER=db
POSTGRES_DB=library_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_PORT=5432

# Application Configuration
PORT=8080
SPRING_PROFILES_ACTIVE=prod
DDL_AUTO=update

# JWT Configuration
# Generate a new secret: openssl rand -hex 32
JWT_SECRET_KEY=your-256-bit-secret-key-change-this-in-production-must-be-at-least-32-characters-long
JWT_EXPIRATION=3600000
JWT_ISSUER=library-api
JWT_AUDIENCE=library-api-client

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Initial Admin User (for seeding)
ADMIN_EMAIL=admin@library.com
ADMIN_PASSWORD=ChangeThisPassword123!
ADMIN_FULLNAME=System Administrator

# Librarian User (for seeding)
LIBRARIAN_EMAIL=librarian@library.com
LIBRARIAN_PASSWORD=LibrarianPass123!
LIBRARIAN_FULLNAME=Head Librarian

# Member User (for seeding)
MEMBER_EMAIL=member@library.com
MEMBER_PASSWORD=MemberPass123!
MEMBER_FULLNAME=Library Member
